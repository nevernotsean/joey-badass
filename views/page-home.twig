                                <a target="_blank" href="https://joeybadass.lnk.to/AABA/amazonmp3">Amazon</a>
                            </li>
                            <li>
                                <a target="_blank" href="https://joeybadass.lnk.to/AABA/spotify">Spotify</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="small-12 medium-10 large-8 small-centered column text-center">
                        <div class="row small-up-1 medium-up-2 image-grid">
                            {% for item in post.get_field('music_posts') %}
                              <div class="column">

                                  <article class="article-item post-type-{{item.post_type}}" id="post-{{item.ID}}">
                                    <section class="article-content">
                                      <a href="{{item.link}}" class="article-link def-link pixellate-trigger"></a>
                                      <div class="image-pixelate">
                                        <img src="{{item.thumbnail.src('large') }}" alt="" class="article-thumbnail">
                                      </div>
                                      <h2 class="article-h1">View</h2>
                                    </section>
                                  </article>
                                  <a href="{{item.link}}">
                                    <h6 style="margin: 15px 0;">{{ item.title }}</h2>
                                  </a>
                              </div>
                            {% endfor %}
                        </div>
                        <a href="./music">View More Music</a>
                    </div>
                </div>
            </div>
            <div class="tour-section">
                <div class="row">
                    <div class="small-12 medium-11 small-centered column">
                        <h2 class="text-center">JOEY BADA$$ TOUR</h2>
                				<table class="tourdates">
                          <tr style="display: none;">
                              <td colspan="5" style="background-color: #333; text-align: center;">
                                <h6 style="color: #fff;">EVERYBODYâ€™S TOUR</h6>
                              </td>
                          </tr>
                					{% for row in tourpage.get_field('tour_row') %}
                            {% set hide = '' %}
                            {% if row.date_hide < now|date('Ymd') %}
                              {% set hide = 'display: none;' %}
                            {% endif %}
                            <tr date="{{row.date_hide}}" date-now="{{ now|date('Ymd') }}" style="{{ hide }}">
                  						<td>{{row.date}}</td>
                  						<td><span>{{row.venue}}</span></td>
                  						<td>{{row.city_state}}</td>
                  						{% if row.disable %}
                  							<td><a href="#" class="disable" style="text-decoration: line-through;pointer-events: none;">Buy Tickets</a></td>
                  						{% else %}
                  							<td><a href="{{row.buy_url}}">Buy Tickets</a></td>
                  						{% endif %}
                              <td>
                                {% if row.disable %}
                  								SOLD OUT
                  							{% else %}
                  								{% if row.vip %}
                  									{% if row.vip_url %}
                  										<a href="{{row.vip_url}}">VIP</a>
                  									{% else %}
                  										<a href="http://bit.ly/joeyvip">VIP</a>
                  									{% endif %}
                  								{% endif %}
                  							{% endif %}
                              </td>
                  					</tr>
                					{% endfor %}
                				</table>
                				<div class="red more-dates">
                					<span>* more tour dates </span>
                					<div>to be annouced soon!</div>
                				</div>
                    </div>
                </div>
            </div>
            <div class="merch-section">
                <div class="row">
                    <div class="small-12 column text-center">
                        <div class="full-height" style="display: none;">
                            <!-- <a target="_blank" title="Shop Merch" href="https://shop.theproera.com/">View the merch</a> -->
                        </div>
                    </div>
                </div>
                <div class="row grey-color">
                  <div class="small-12 column text-center">
                    {% include 'social-links.twig' %}
